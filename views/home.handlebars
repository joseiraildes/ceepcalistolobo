<div class="container text-center">
  <div class="row mb-3">
    <div class="col-md-6 d-grid gap-2">
      <button type="button" class="btn btn-secondary" onclick="location.href='/publicar'">
        Fazer uma publicação
      </button>
    </div>
    <div class="col-md-6 d-grid gap-2">
      <button type="button" class="btn btn-secondary" onclick="location.href='/@{{userName}}/conteudos'">
        Minhas Publicações
      </button>
    </div>
  </div>
</div>

<div class="container">
  {{#each posts}}
    <div class="card mb-3 p-3">
      <div class="d-flex mb-3">
        <a href="/@{{nome}}" class=" text-decoration-none mx-3">{{nome}}</a>
        <div class="">
          <span class="badge bg-primary">{{{data}}}</span>
        </div>
      </div>
      <div class="card-text mx-3">
        <h6>
          <a href="/@{{nome}}/{{id}}" class="text-decoration-none">{{titulo}}</a>
        </h6>
      </div>
    </div>
  {{/each}}
</div>